@page 
@model MyScriptureJournal.Pages.JournalEntries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>JournalEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JournalEntry.Note" class="control-label"></label>
                <textarea asp-for="JournalEntry.Note" class="form-control"></textarea>
                <span asp-validation-for="JournalEntry.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.ScriptureRef.Book" class="control-label"></label>
                <input asp-for="JournalEntry.ScriptureRef.Book" class="form-control">
                <span asp-validation-for="JournalEntry.ScriptureRef.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.ScriptureRef.Chapter" class="control-label"></label>
                <input asp-for="JournalEntry.ScriptureRef.Chapter" class="form-control"
                       id="createChapter">
                <span asp-validation-for="JournalEntry.ScriptureRef.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.ScriptureRef.RefStart" class="control-label"></label>
                <input asp-for="JournalEntry.ScriptureRef.RefStart" class="form-control">
                <span asp-validation-for="JournalEntry.ScriptureRef.RefStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.ScriptureRef.RefEnd" class="control-label"></label>
                <input asp-for="JournalEntry.ScriptureRef.RefEnd" class="form-control">
                <span asp-validation-for="JournalEntry.ScriptureRef.RefEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

